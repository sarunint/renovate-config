{
  "name": "@sarunint/renovate-config",
  "version": "3.0.0",
  "description": "Renovate configuration presets for SarunInt",
  "author": "Sarun Intaralawan <sarunint@sarunint.com>",
  "license": "MIT",
  "renovate-config": {
    "base": {
      "extends": [
        "config:base"
      ],
      "prHourlyLimit": 0,
      "prConcurrentLimit": 0,
      "rebaseStalePrs": true,
      "lockFileMaintenance": {
        "enabled": true,
        "schedule": "after 1pm before 10pm on Friday, Saturday, Sunday",
        "automerge": true,
        "requiredStatusChecks": null
      },
      "masterIssue": true,
      "packageRules": [
        {
          "packageNames": [
            "@types/node"
          ],
          "major": {
            "enabled": true
          }
        }
      ]
    },
    "angular": {
      "extends": [
        "@sarunint:angular-v9"
      ]
    },
    "nestjs": {
      "extends": [
        "@sarunint:base"
      ],
      "packageRules": [
        {
          "packagePatterns": "^@nestjs/",
          "groupName": "NestJS packages"
        }
      ]
    },
    "angular-v8": {
      "extends": [
        "@sarunint:base"
      ],
      "packageRules": [
        {
          "packageNames": [
            "typescript"
          ],
          "allowedVersions": "< 3.6"
        },
        {
          "extends": "monorepo:angularcli",
          "allowedVersions": "< 9.0.0"
        },
        {
          "extends": "monorepo:angular",
          "allowedVersions": "< 9.0.0"
        },
        {
          "packageNames": [
            "@angular-devkit/architect",
            "@angular-devkit/build-angular",
            "@angular/pwa"
          ],
          "allowedVersions": "< 0.900.0"
        }
      ]
    },
    "angular-v9": {
      "extends": [
        "@sarunint:base"
      ],
      "packageRules": [
        {
          "packageNames": [
            "typescript"
          ],
          "allowedVersions": "< 3.8"
        },
        {
          "extends": "monorepo:angularcli",
          "allowedVersions": "< 10.0.0"
        },
        {
          "extends": "monorepo:angular",
          "allowedVersions": "< 10.0.0"
        },
        {
          "packageNames": [
            "@angular-devkit/architect",
            "@angular-devkit/build-angular",
            "@angular/pwa"
          ],
          "allowedVersions": "< 0.1000.0"
        }
      ]
    }
  },
  "devDependencies": {
    "conventional-github-releaser": "3.1.3",
    "standard-version": "7.1.0"
  }
}
